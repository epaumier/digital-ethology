---
interface Props {
  title: string;
  description: string;
  projectName: string;
  image: string;

}

const { title, description, projectName } = Astro.props;
---
<div class="relative flex flex-col m-4 bg-white shadow-sm border border-slate-200 rounded-lg">
    <div class="mx-3 mb-0 border-b border-slate-200 pt-3 pb-2 px-1">
      <span class="text-sm text-slate-600 font-medium">
        {projectName}
      </span>
    </div>

    <div class="p-4">
      <h5 class="mb-2 text-slate-800 text-xl font-semibold">
        {title}
      </h5>
      <p class="text-slate-600 leading-normal font-light">
        {description}
      </p>
    </div>
  </div>